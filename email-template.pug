doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title RedigoPA App Invitation
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f2f2f2;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        border: 0;
        border-spacing: 0;
        border-radius: 12px;
        color: #333;
      }
      td {
        padding: 0;
        text-align: center;
      }
      .header {
        padding: 20px;
      }
      .content {
        padding: 20px 40px;
      }
      p{
        font-size: 18px;
        margin: 0;
        text-align : left;
      }
      .data-table{
        width: 100%; 
        border-radius: 12px;
      }
      .data-table th, .data-table td {
        padding: 16px;
      }
      .data-table th{
        border-bottom: 1px solid #333;
        
      }
      .data-table td{
        border-bottom: 1px solid #E4E4E4;
        font-weight: 600;
      }
  body
